<h1>Listing ideas</h1>

<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="span4">
        
        <%= link_to image_tag(idea.picture_url, :width => '100%'), idea %>
        <h4><%= link_to idea.name, idea %></h4>
        <p class='txt'><%= idea.description %></p>
      </div>
    <% end %>
  </div>
<% end %>
